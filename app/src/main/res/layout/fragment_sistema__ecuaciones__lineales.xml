<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sistema_Ecuaciones_Lineales">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="Filas="/>

        <EditText
            android:id="@+id/txtFSELFila"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="#878787"
            android:textSize="30sp"
            android:textStyle="bold"
            android:inputType="number"
            android:maxLength="2"
            android:hint="#"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="Columnas="/>

        <EditText
            android:id="@+id/txtFSELColumna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="#878787"
            android:textSize="30sp"
            android:textStyle="bold"
            android:inputType="number"
            android:maxLength="2"
            android:hint="#"/>

        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/btnFSELCrear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear"
            android:textAllCaps="false"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/FSELRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/btnObtener"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:enabled="false"
            android:text="Calcular"
            android:textAllCaps="false"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/SELRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/txtResultadoSEL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2mm"
            android:background="#8b1214"
            android:enabled="false"
            android:hint="T"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textStyle="bold"
            android:textSize="50sp" />

    </LinearLayout>

</FrameLayout>