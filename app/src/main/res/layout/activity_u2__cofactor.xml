<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Unidad_2.U2_Cofactor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="Filas="/>

            <EditText
                android:id="@+id/txtCOFACTORFila"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#878787"
                android:textSize="30sp"
                android:textStyle="bold"
                android:inputType="number"
                android:maxLength="2"
                android:hint="#"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="Columnas="/>

            <EditText
                android:id="@+id/txtCOFACTORColumna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#878787"
                android:textSize="30sp"
                android:textStyle="bold"
                android:inputType="number"
                android:maxLength="2"
                android:hint="#"/>

        </LinearLayout>

        <Button
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/btnCOFACTORCrear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear"
            android:textAllCaps="false"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/COFACTORRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/btnCOFACTORObtener"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:enabled="false"
            android:text="Calcular Cofactor"
            android:textAllCaps="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:text="Cofactores"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAlignment="center"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/COFACTORRESULTADORecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>